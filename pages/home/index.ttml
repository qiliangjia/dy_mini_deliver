<view class="layout">
    <image class="bg" src="/image/bg.png" mode="widthFix"></image>
    <swiper bindchange="swiperChange" class="swiper" circular="true">
        <block tt:for="{{images}}" tt:key="index">
            <swiper-item>
                <view class="swiper-item">
                    <image class="img" src="{{item}}" mode="aspectFill" />
                </view>
            </swiper-item>
        </block>
    </swiper>
    <view class="swiper-block">
        <text tt:for="{{images}}" tt:key="index" class="active {{current === index ? 'selected':''}}"></text>
    </view>
    <image class="bg-img" src="/image/3.jpg" mode="widthFix"></image>
    <button class="button" open-type="getPhoneNumber" bindgetphonenumber="getphonenumber">
        <image class="info" src="/image/icon-info.png" mode="widthFix"></image>
        手机登陆并建立联系
        <image class="head" src="/image/icon-head.png" mode="widthFix"></image>
    </button>
</view>

<popup-layer show="{{show}}" bind:close="close" bind:button="sendSms" />

<follow-popup show="{{follow}}" bind:close="closeFollow" bind:button="followAwemeUser" />